# =============================================================================
# SALESFORCE ANALYTICS EMBEDDING TEMPLATE - ENVIRONMENT CONFIGURATION
# =============================================================================
#
# Copy this file to .env and configure with your actual values
# DO NOT commit the .env file to version control
#
# =============================================================================

# -----------------------------------------------------------------------------
# SALESFORCE CONFIGURATION
# -----------------------------------------------------------------------------

# Your Salesforce org URL (without trailing slash)
# Example: https://mycompany.my.salesforce.com
SALESFORCE_ORG_URL=https://your-org.my.salesforce.com

# Salesforce Connected App credentials
# Create a Connected App in Setup > App Manager > New Connected App
SALESFORCE_CLIENT_ID=your_connected_app_client_id_here
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret_here

# -----------------------------------------------------------------------------
# TABLEAU NEXT ANALYTICS CONFIGURATION
# -----------------------------------------------------------------------------

# Dashboard API Name or ID from Salesforce Analytics
# Find this in Setup > Analytics > Dashboards
TABLEAU_DASHBOARD_ID=your_dashboard_api_name

# -----------------------------------------------------------------------------
# AGENTFORCE CONFIGURATION
# -----------------------------------------------------------------------------

# Agentforce Agent API Name or ID
# Configure this in Setup > Agentforce > Agents
AGENTFORCE_AGENT_ID=Analytics_and_Visualization

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------

# Application URL (used for OAuth callbacks)
# Local development: http://localhost:5000
# Production: https://your-app.yourdomain.com
APP_URL=http://localhost:5000

# Flask secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Environment (development, production)
FLASK_ENV=development

# Application port
PORT=5000

# -----------------------------------------------------------------------------
# OPTIONAL VEEVA CRM INTEGRATION
# -----------------------------------------------------------------------------

# Enable Veeva CRM integration features (true/false)
VEEVA_INTEGRATION_ENABLED=false

# Veeva Vault URL (if using Veeva Vault integration)
VEEVA_VAULT_URL=https://your-vault.veevavault.com

# -----------------------------------------------------------------------------
# OPTIONAL CUSTOMIZATION
# -----------------------------------------------------------------------------

# Company/Organization name (displayed in UI)
COMPANY_NAME=Your Company Name

# Debug mode (enables verbose logging)
DEBUG_MODE=false

# =============================================================================
# EXAMPLES
# =============================================================================

# PHARMACEUTICAL COMPANY EXAMPLE:
# SALESFORCE_ORG_URL=https://pharmaco.my.salesforce.com
# TABLEAU_DASHBOARD_ID=Pharma_Sales_Analytics_Dashboard
# AGENTFORCE_AGENT_ID=Pharmaceutical_Analytics_Agent
# COMPANY_NAME=Pharma Company Inc
# VEEVA_INTEGRATION_ENABLED=true

# GENERIC BUSINESS EXAMPLE:
# SALESFORCE_ORG_URL=https://business.my.salesforce.com
# TABLEAU_DASHBOARD_ID=Business_Analytics_Dashboard
# AGENTFORCE_AGENT_ID=Business_Intelligence_Agent
# COMPANY_NAME=Business Corp

# =============================================================================